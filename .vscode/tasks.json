{
  "tasks": [
    {
      "label": "Build and Move Flutter APK DEV",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "flutter build apk --dart-define=ENV=DEV && cp build/app/outputs/flutter-apk/app-release.apk ./app-release.apk"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Builds the APK and moves it to project root"
    },
    {
      "label": "Build and Move Flutter APK RELEASE",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "flutter build apk --release --dart-define=ENV=PROD && cp build/app/outputs/flutter-apk/app-release.apk ./app-release.apk"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Builds the APK and moves it to project root"
    },
    {
      "label": "Dart Build_Runner",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "dart run build_runner build --delete-conflicting-outputs"
      ],
      "detail": "dart run build_runner build --delete-conflicting-outputs"
    }
  ]
}
